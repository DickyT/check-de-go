{
  "name": "check-de-go",
  "productName": "check-de-go",
  "version": "1.0.0",
  "description": "Yet another check generation & printing app written by electron react & typescript.",
  "main": "src/index.ts",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make:macos": "electron-forge make --platform darwin",
    "make:win": "electron-forge make --platform win32",
    "make:linux": "electron-forge make --platform linux",
    "publish": "electron-forge publish",
    "lint": "tslint --project tsconfig.json --type-check --force"
  },
  "keywords": [],
  "author": "dickyt",
  "license": "GPL",
  "config": {
    "forge": {
      "make_targets": {
        "win32": [
          "squirrel"
        ],
        "darwin": [
          "zip"
        ],
        "linux": [
          "deb",
          "rpm"
        ]
      },
      "electronPackagerConfig": {
        "packageManager": "npm",
        "icon": "src/icons/cheque.png"
      },
      "electronWinstallerConfig": {
        "name": "Check de Go"
      },
      "electronInstallerDebian": {},
      "electronInstallerRedhat": {},
      "github_repository": {
        "owner": "",
        "name": ""
      },
      "windowsStoreConfig": {
        "packageName": "Check de Go",
        "name": "checkdego"
      }
    }
  },
  "dependencies": {
    "@material-ui/core": "^3.9.1",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/number-to-words": "^1.2.0",
    "@types/react": "^0.14.57",
    "@types/react-dom": "^0.14.23",
    "electron-compile": "^6.4.4",
    "electron-devtools-installer": "^2.2.4",
    "electron-squirrel-startup": "^1.0.0",
    "number-to-words": "^1.2.4",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-hot-loader": "^3.1.3",
    "tslib": "^1.9.3"
  },
  "devDependencies": {
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "electron-forge": "^5.2.4",
    "electron-prebuilt-compile": "4.0.0",
    "tslint": "^5.12.1",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^2.2.2",
    "electron": "^4.0.2",
    "@types/react": "^16.7.21",
    "@types/react-dom": "^16.0.11"
  }
}